{
    "version": 2,
    "builds": [
      { "src": "chat-application/package.json", "use": "@vercel/static-build", "config": { "distDir": "chat-application/build" } },
      { "src": "backend/server.js", "use": "@vercel/node" }
    ],
    "rewrites": [
      { "source": "/(.*)", "destination": "/backend/server.js" },
      { "source": "/(.*)", "destination": "/chat-application/build/index.html" }
    ]
  }
  