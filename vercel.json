{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      },
      {
        "src": "chat-application/package.json",
        "use": "@vercel/static-build",
        "config": { "distDir": "chat-application/build" }
      }
    ],
    "routes": [
      { "src": "/(.*)", "dest": "/backend/server.js" },
      { "src": "/(.*)", "dest": "/chat-application/$1" }
    ]
  }
  